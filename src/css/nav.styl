.nav
    position absolute
    overflow hidden
    top 0
    left -100%
    margin-left 0
    padding .25em .65em
    width 13em
    height 100%
    background-color #333
    background-color rgba(0,0,0,0.8)
    font-size 1.25em
    line-height 1.6
    transition left .5s

.navafter
    content ""
    position absolute
    top 2.5em
    left 0
    width 100%
    height 0.1em
    background-color white

.nav h1
    margin 0 0 .8em
    font-size 1.25em
    font-weight normal
    font-style italic

.nav a
    margin-bottom .5em
    display block
    color white
    text-decoration none

.nav-open
    left 0

.navicon_button
    display inline-block
    position absolute
    top 0
    left 0
    padding 1.5em .75em
    transition .5s
    cursor pointer
    -webkit-user-select none
    user-select none
    opacity .9
    .naviconbefore, .naviconafter
        transition .25s

.navicon
    position relative
    width 2.5em
    height .25em
    background white
    font-size .75em
    transition .5s
    border-radius 2.5em
    &after, &before
        display block
        content ""
        height .25em
        width 2.5em
        background white
        position absolute
        z-index -1
        transition .5s .25s
        border-radius 1em
    &after
        top -.825em
    &before
        top .825em

.navicon_button-active
    left 13em
    &before
        content ""
        position absolute
        top 0
        left 3.5em
        width 40em
        height 30em

.navicon_button-active .naviconbefore, .navicon_button-active .naviconafter
    transition .5s
    top 0

.navicon_button-active .navicon
    background transparent
    &after
        -webkit-transform rotate(45deg)
        -ms-transform rotate(45deg)
        transform rotate(45deg)
    &before
        -webkit-transform rotate(-45deg)
        -ms-transform rotate(-45deg)
        transform rotate(-45deg)